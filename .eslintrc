{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "globals": {
    "document": true,
    "window": true,
    "fetch": true
  },
  "rules": {
    "react/react-in-jsx-scope": 0,
    "react/jsx-tag-spacing": 0,
    "react/jsx-filename-extension": 0,
    "class-methods-use-this": [
      0
    ],
    "no-continue": [
      0
    ],
    "comma-dangle": [
      1,
      "never"
    ],
    "spaced-comment": [
      0,
      "always"
    ],
    "no-restricted-syntax": [
      "error",
      "ForInStatement",
      "LabeledStatement",
      "WithStatement"
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "ignore",
        "asyncArrow": "ignore"
      }
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allowAfterThis": true
      }
    ],
    "no-await-in-loop": [
      0
    ]
  }
}